@model OneBlog.Models.ResetPasswordViewModel
@{
    ViewBag.Title = Resources.labels.changePassword;
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
<h1 class="account-title">@ViewBag.Title</h1>
<div class="account-body">
    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Code)
        <div class="form-group first-child">
            @Html.LabelFor(m => m.Email, new { @class = "label-up" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @readonly = "readonly" })
            <asp:TextBox ID="CurrentPassword" runat="server" placeholder="" CssClass="passwordEntry form-control ltr-dir" TextMode="Password"></asp:TextBox>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.CurrentPassword, new { @class = "label-up" })
            @Html.PasswordFor(m => m.CurrentPassword, new { @class = "passwordEntry form-control ltr-dir" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "label-up" })
            @Html.PasswordFor(m => m.Password, new { @class = "passwordEntry form-control ltr-dir" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "label-up" })
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "passwordEntry form-control ltr-dir" })
        </div>
        <div class="btn-wrapper">
            <input type="submit" class="btn btn-block btn-success" value="重置" />
        </div>

    }
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
