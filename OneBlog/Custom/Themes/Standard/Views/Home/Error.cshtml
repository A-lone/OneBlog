@{
    Layout = null;

    var image = string.Empty;
    if (ViewBag.Code == 404)
    {
        image = "/Content/images/NotFound.png";
    }
    else
    {
        image = "/Content/images/Error.png";
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="keywords" content="@ViewBag.Keywords" />
    <meta name="description" content="@ViewBag.Description" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="/favicon.ico">
    <meta http-equiv="refresh" content="5; url=/" />
    <style type="text/css">
        div, body, p, h3 {
            margin: 0;
            padding: 0;
        }

        a {
            text-decoration: none;
        }

        body {
            font: 12px/1.5 tahoma,Arial;
        }

        img {
            display: block;
            margin: 40px auto 0;
            text-align: center;
            height: 370px;
        }

        .status {
            font-size: 22px;
            color: #657077;
            text-align: center;
            margin: 10px 0 6px 0;
        }

        p {
            font-size: 14px;
            color: #657077;
            text-align: center;
        }

        .return {
            width: 176px;
            height: 32px;
            background-color: #54a9ff;
            color: #fff;
            display: block;
            text-align: center;
            line-height: 32px;
            margin: 20px auto 0;
            border-radius: 4px;
        }

        .action {
            font-size: 13px;
            margin: 10px auto;
            text-align: center;
        }

            .action a {
                color: #007ec8;
                margin: 14px;
            }

                .action a > i {
                    display: inline-block;
                    width: 16px;
                    height: 16px;
                    vertical-align: bottom;
                    margin-right: 4px;
                }
    </style>
</head>
<body>
    <div class="404">
        <img src="@image">
        <h3 class="status">@ViewBag.Code!</h3>
        <p class="tip">@ViewBag.Tip</p>
        <div class="action">
            5秒钟后自动返回首页...
        </div>
        <a class="return" href="/">返回首页</a>
    </div>
</body>
</html>