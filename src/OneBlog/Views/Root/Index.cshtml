@inject One.Services.DataProviders.CalendarProvider appearances
@using Microsoft.AspNetCore.Routing
@model PostsResult
@{
    ViewBag.Title = "大田村|WIN10|UWP之家 - 精选内容聚合，数码、科技、生活";
    ViewBag.ControllerName = "Root";
    string active = "active";
}

@if (Model.RecommendPosts != null)
{
    <div class="slider">
        <div id="hot-generic" class="carousel  slide" data-ride="carousel">

            <ol class="carousel-indicators">
                <li data-target="#hot-generic" data-slide-to="0" class="active"></li>
                <li data-target="#hot-generic" data-slide-to="1"></li>
                <li data-target="#hot-generic" data-slide-to="2"></li>
            </ol>

            <div class="carousel-inner">

                @foreach (var item in Model.RecommendPosts)
                {
                    var cover = @item.Cover1 + "?imageMogr2/thumbnail/!1200x260r/gravity/Center/crop/x260/blur/1x0/quality/100|imageslim";
                    <div class="item @active">
                        <img src="@cover" alt="Slider">
                        <div class="carousel-caption">
                            <div class="slider__container">
                                <a asp-controller="Root" asp-action="Post" asp-route-id="@item.Id">
                                    <h1 class="slider__title">@item.Title</h1>
                                </a>
                            </div>
                        </div>
                    </div>
                    active = "";
                }
            </div>
            <a class="left  carousel-control" href="#hot-generic" data-slide="prev"> <span class="glyphicon  glyphicon-chevron-left"></span> </a>
            <a class="right  carousel-control" href="#hot-generic" data-slide="next"> <span class="glyphicon  glyphicon-chevron-right"></span> </a>
        </div>
    </div>

}
<div class="container">
    <div class="row">
        @foreach (var story in Model.Posts)
            {
            <div class="col-lg-3">
                @Html.Partial("_PostBrief", story)
            </div>
        }
        <div class="row">
            <div class="col-lg-12">
                @Html.Partial("_Pager")
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="col-xs-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    友情链接： <a href="http://www.ruanfenquan.com" title="软粉圈" target="_blank">软粉圈</a> <a href="http://chenrensong.com" title="陈仁松同学" target="_blank">陈仁松同学</a>
                    <br>
                </div>
            </div>
        </div>
    </div>
</div>