@model OneBlog.Data.Models.PostItem
@{
    CategoryItem category = null;
    if (Model.Categories != null)
    {
        category = Model.Categories.FirstOrDefault();
    }
}
<article class="post-card-wrap column medium-6 large-4 ">
    <div class="post-card  post-card--featured ">
        @if (category != null)
        {
            <a asp-action="index" asp-controller="category" asp-route-id="@category.Id" class="article-label" target="_blank">@category.Title</a>
        }
        <a asp-controller="Root" asp-action="Post" asp-route-id="@Model.Id" class="block" title="@Model.Title">
            <div class="grey-bg post-card__image CoverImage FlexEmbed FlexEmbed--16by9" style="background-image: url(@Model.Cover1) ">
            </div>
        </a>

        <h2 class="post-card__title post-card__title--medium">
            <a title="@Model.Title" asp-controller="Root" asp-action="Post" asp-route-id="@Model.Id">@Model.Title</a>
        </h2>

        <time>@Model.DatePublished</time>
        <div class="article-meta">
            <a class="text-link" href="/post/@Model.Id#comment" target="_blank">
                <span><i class="glyphicon glyphicon-comment"></i> @Model.CommentsCount</span>
            </a>
            <span><i class="glyphicon glyphicon-record"></i> @Model.ReadCount</span>
        </div>
    </div>
</article>