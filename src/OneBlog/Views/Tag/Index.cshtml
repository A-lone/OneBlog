@model PostsResult
@{

    ViewBag.Title = $"Tag: {ViewContext.RouteData.Values["tag"]}";
    ViewBag.PageName = "大田村";
    ViewBag.PageBlurb = $"";
    ViewBag.Tag = ViewContext.RouteData.Values["tag"];
    ViewBag.PageImage = "/img/logo-square.png";
    ViewBag.ControllerName = "Tag";
}
@if (Model.Posts != null)
{
    <div class="container">
        <div class="search-results">
            <p>
            </p><h3>Tag:</h3>&nbsp;
            <h2>@ViewBag.Tag</h2>
            <p>
            </p>
        </div>
        <div class="row">
            @foreach (var story in Model.Posts)
            {
                <div class="col-lg-3">
                    @Html.Partial("_PostBrief", story)
                </div>
            }
            <div class="row">
                <div class="col-lg-12">
                    @Html.Partial("_Pager")
                </div>
            </div>
        </div>
    </div>
}