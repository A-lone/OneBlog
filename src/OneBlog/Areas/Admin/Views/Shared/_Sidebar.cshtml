            <div class="nav-user-img"><img src="@Url.Action("Avatar", "Account", new { md5 = Md5Helper.Parse(CurrentUser.UserName) })" /></div>
            <div class="nav-user-name text-ellipsis">@CurrentUser.DisplayName</div>
        </div>
        @this.BodyContent
